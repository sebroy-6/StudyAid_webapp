	<body class="homePage">

		<ul class="bar-side" id="bar-side">
			<h1>POLYSTUDY</h1>
			<li class="bar-side">
				<button onclick="toggleClassDisplay('studyTool')">Study tools</button>
                <button class="studyTool" onclick="location.href='/studyTimer'">Timer</button>
				<button onclick="location.href='/studySchedule'"> See Schedule</button>
                <button onclick="location.href='/tasks'"> See daily tasks</button>
			</li>
            <button class="rightPullTag" 
            onclick="toggleClassToElement('bar-side', 'hidden');
                     toggleClassToElement('app-container', 'fullScreen');">
                <div></div>
            </button>
